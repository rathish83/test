<core:FragmentDefinition xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:table="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" 
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:common="sap.suite.ui.commons">
	<Dialog id="notesDialog" title="Mail Body Content" contentWidth="40%" class="zDialog" draggable="true" resizable="true">
		<content>
			<VBox class="zCommList">
            <TextArea 
                 value="{oNotesModel>/mailBody}" rows="15" width="100%"/>		 
			</VBox>
		</content>
		<endButton>
			<Button xmlns="sap.m" text="Cancel" id="btnMCCancel" press="onNotesClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>